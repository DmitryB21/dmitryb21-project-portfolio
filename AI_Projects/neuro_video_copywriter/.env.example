# Backend environment variables
# Все переменные должны иметь префикс NVC_

# OpenAI API ключ (обязательно для транскрибации через API и генерации методички)
NVC_OPENAI_API_KEY=your_openai_api_key_here

# База данных PostgreSQL
# Для локальной разработки:
NVC_DATABASE_URL=postgresql+psycopg://nvc_user:nvc_password@localhost:5432/nvc_db
# Для Docker:
# NVC_DATABASE_URL=postgresql+psycopg://nvc_user:nvc_password@postgres:5432/nvc_db

# Qdrant векторное хранилище
# Для локальной разработки:
NVC_QDRANT_URL=http://localhost:6333
# Для Docker:
# NVC_QDRANT_URL=http://qdrant:6333
NVC_QDRANT_API_KEY=

# Модель Whisper для локальной транскрибации (base, small, medium, large)
NVC_WHISPER_MODEL=base

# Пути к утилитам (по умолчанию ищутся в PATH)
NVC_YT_DLP_PATH=yt-dlp
NVC_FFMPEG_PATH=ffmpeg

# VK API токен (опционально, если нужна загрузка с VK)
NVC_VK_ACCESS_TOKEN=

# Путь к cookies для RuTube (опционально)
NVC_RUTUBE_COOKIE_PATH=

# Окружение (development, production)
NVC_ENVIRONMENT=development

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
NVC_LOG_LEVEL=INFO

